{
  "name": "NXP i.MX RT1062",
  "description": "Configuration for i.MX RT1062 MCU (Teensy 4.x) - ARM Cortex-M7 @ 600MHz",
  "mcu": "imxrt1062",
  "architecture": "arm",

  "compiler_flags": {
    "common": [
      "-mcpu=cortex-m7",
      "-mthumb",
      "-mfloat-abi=hard",
      "-mfpu=fpv5-d16",
      "-O2",
      "-g",
      "-Wall",
      "-Wextra",
      "-Wno-unused-parameter",
      "-ffunction-sections",
      "-fdata-sections",
      "-MMD"
    ],
    "c": [
      "-std=gnu11"
    ],
    "cxx": [
      "-std=gnu++17",
      "-fno-exceptions",
      "-fno-rtti",
      "-felide-constructors",
      "-fno-threadsafe-statics"
    ]
  },

  "linker_flags": [
    "-mcpu=cortex-m7",
    "-mthumb",
    "-mfloat-abi=hard",
    "-mfpu=fpv5-d16",
    "-O2",
    "-Wl,--gc-sections",
    "-Wl,--print-memory-usage",
    "-lm",
    "-lstdc++"
  ],

  "linker_scripts": [],

  "defines": [
    "__IMXRT1062__",
    "ARDUINO_ARCH_TEENSY",
    ["ARDUINO", "10819"],
    ["TEENSYDUINO", "159"],
    "USB_SERIAL",
    "LAYOUT_US_ENGLISH"
  ]
}
